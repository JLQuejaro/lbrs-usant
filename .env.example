# ============================================================
# USANT LBRS - Environment Variables
# ============================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!
# ============================================================

# ============================================================
# DATABASE CONFIGURATION
# ============================================================

# PostgreSQL Database Connection
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lbrs_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# Alternative: Full connection string (optional)
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/lbrs_db

# ============================================================
# APPLICATION CONFIGURATION
# ============================================================

# Next.js Application
NEXT_PUBLIC_APP_NAME=USANT LBRS
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development

# ============================================================
# AUTHENTICATION (For future implementation)
# ============================================================

# JWT Secret (generate a strong random string)
# Example: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Session Configuration
SESSION_MAX_AGE=7d

# ============================================================
# FILE STORAGE (For ID documents, etc.)
# ============================================================

# Local storage path for uploaded files
UPLOAD_PATH=./uploads

# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# ============================================================
# EMAIL CONFIGURATION (For notifications - future)
# ============================================================

# SMTP Settings
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@usant.edu
# SMTP_PASSWORD=your_app_password

# Email From Address
# EMAIL_FROM=noreply@usant.edu

# ============================================================
# SECURITY
# ============================================================

# Bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=10

# Rate limiting (requests per minute)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ============================================================
# PRODUCTION SETTINGS (Optional)
# ============================================================

# Production Database URL
# DATABASE_URL=postgresql://user:password@host:port/lbrs_db

# Enable SSL for production database
# DATABASE_SSL=true

# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379

# ============================================================
# DEVELOPMENT ONLY
# ============================================================

# Enable debug logging
DEBUG=true

# Log database queries
LOG_DB_QUERIES=true

# Seed mock data on startup (development only)
SEED_MOCK_DATA=false
